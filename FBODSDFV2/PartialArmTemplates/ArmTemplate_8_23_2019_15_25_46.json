{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "FBODSDFV2"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/AzureBlobInputFile_LinkedService')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "FileServer",
				"typeProperties": {
					"host": "\\\\fbodsstorage.file.core.windows.net\\fbodsincoming\\",
					"userId": "AZURE\\fbodsstorage",
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "adfhbods1",
							"type": "LinkedServiceReference"
						},
						"secretName": "adfLinkedfilestrk",
						"secretVersion": ""
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/SQL_FBODS')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "adfhbods1",
							"type": "LinkedServiceReference"
						},
						"secretName": "sqlConStr1",
						"secretVersion": ""
					}
				}
			},
			"dependsOn": []
		}
	]
}